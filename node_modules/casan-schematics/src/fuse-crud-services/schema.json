{
    "$schema": "http://json-schema.org/schema",
    "$id": "CreateApi",
    "type": "object",
    "properties": {
      "name": {
        "type": "string",
        "description": "The name of the API",
        "x-prompt": "Name:",
        "default": "new-api",
        "minLength": 1
      },
      "path": {
        "type": "string",
        "description": "The path to create the API",
        "default": "./src/app/core"
      }
    },
    "required": ["name"]
  }
  