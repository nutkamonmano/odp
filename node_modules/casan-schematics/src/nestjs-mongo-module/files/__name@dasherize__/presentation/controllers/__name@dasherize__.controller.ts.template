import {
  Body,
  Controller,
  Get,
  Post,
  Put,
  Delete,
  Param,
  Query,
  UseGuards,
  Req,
} from '@nestjs/common';
import { CommandBus, QueryBus } from '@nestjs/cqrs';
import { SetMetadata } from '@nestjs/common';
import { ApiTags, ApiOperation, ApiResponse, ApiQuery, ApiBearerAuth } from '@nestjs/swagger';
import { Create<%= classify(name) %>Dto } from '../../application/dtos/create-<%= dasherize(name) %>.dto';
import { Update<%= classify(name) %>Dto } from '../../application/dtos/update-<%= dasherize(name) %>.dto';
import { Create<%= classify(name) %>Command } from '../../application/commands/create-<%= dasherize(name) %>.command';
import { Update<%= classify(name) %>Command } from '../../application/commands/update-<%= dasherize(name) %>.command';
import { GetAll<%= classify(name) %>sQuery } from '../../application/queries/get-all-<%= dasherize(name) %>s.query';
import { RolesAndScopesGuard } from '../../../common/presentation/guards/roles-and-scopes.guard';
import { Delete<%= classify(name) %>Command } from '../../application/commands/delete-<%= dasherize(name) %>.command';
import { Get<%= classify(name) %>ByIdQuery } from '../../application/queries/get-<%= dasherize(name) %>-by-id.query';

@ApiTags('<%= dasherize(name) %>s')
@Controller('<%= dasherize(name) %>s')
@ApiBearerAuth() // ใช้ Bearer Token ในการเข้าถึง API นี้
@UseGuards(RolesAndScopesGuard) // ใช้ RolesGuard กับทั้ง controller
export class <%= classify(name) %>Controller {
  constructor(
    private readonly commandBus: CommandBus,
    private readonly queryBus: QueryBus,
  ) {}

  @Post()
  @SetMetadata('roles', ['owner', 'admin']) // กำหนดว่าเฉพาะ admin ที่สามารถเรียกใช้งานได้
  @ApiOperation({ summary: 'Create a new <%= dasherize(name) %>' })
  @ApiResponse({ status: 201, description: '<%= classify(name) %> successfully created' })
  async create<%= classify(name) %>(
    @Body() create<%= classify(name) %>Dto: Create<%= classify(name) %>Dto,
    @Req() req,
  ) {
    const command = new Create<%= classify(name) %>Command(
      create<%= classify(name) %>Dto,
      req.user,
    );
    return await this.commandBus.execute(command);
  }

  @Get()
  @ApiOperation({ summary: 'Get all <%= dasherize(name) %>s with pagination' })
  @ApiQuery({
    name: 'page',
    required: false,
    description: 'Page number',
    type: Number,
  })
  @ApiQuery({
    name: 'limit',
    required: false,
    description: 'Number of items per page',
    type: Number,
  })
  @ApiQuery({
    name: 'sortBy',
    required: false,
    description: 'sort by field name',
    type: String,
  })
  @ApiQuery({
    name: 'sortType',
    required: false,
    description: 'sort type order by asc desc',
    type: String,
  })
  @ApiQuery({
    name: 'keyword',
    required: false,
    description: 'keyword for search',
    type: String,
  })
  @ApiResponse({ status: 200, description: 'List of all <%= dasherize(name) %>s' })
  async getAll<%= classify(name) %>s(
    @Query('page') page = 1, 
    @Query('limit') limit = 10,
    @Query('sortBy') sortBy: string,
    @Query('sortType') sortType: 'asc' | 'desc',
    @Query('keyword') keyword: string,
    @Req() req,
  ) {
    sortBy = sortBy && sortBy.trim() !== '' ? sortBy : 'createdAt';
    return await this.queryBus.execute(new GetAll<%= classify(name) %>sQuery(page, limit, sortBy, sortType, keyword, req.user));
  }

  @Get(':id')
  @ApiOperation({ summary: 'Get a <%= dasherize(name) %> by ID' })
  @ApiResponse({ status: 200, description: '<%= classify(name) %> details' })
  async get<%= classify(name) %>ById(@Param('id') id: string) {
    return await this.queryBus.execute(new Get<%= classify(name) %>ByIdQuery(id));
  }

  @Put(':id')
  @SetMetadata('roles', ['owner', 'admin']) // กำหนดว่าเฉพาะ admin ที่สามารถเรียกใช้งานได้
  @ApiOperation({ summary: 'Update a <%= dasherize(name) %> by ID' })
  @ApiResponse({ status: 200, description: '<%= classify(name) %> successfully updated' })
  async update<%= classify(name) %>(
    @Param('id') id: string,
    @Body() update<%= classify(name) %>Dto: Update<%= classify(name) %>Dto,
    @Req() req,
  ) {
    const command = new Update<%= classify(name) %>Command(
      id, 
      update<%= classify(name) %>Dto,
      req.user,
    );
    return await this.commandBus.execute(command);
  }

  @Delete(':id')
  @SetMetadata('roles', ['owner', 'admin']) // กำหนดว่าเฉพาะ admin ที่สามารถเรียกใช้งานได้
  @ApiOperation({ summary: 'Delete a <%= dasherize(name) %> by ID' })
  @ApiResponse({ status: 200, description: '<%= classify(name) %> successfully deleted' })
  async delete<%= classify(name) %>(@Param('id') id: string): Promise<void> {
    await this.commandBus.execute(new Delete<%= classify(name) %>Command(id));
  }
}
